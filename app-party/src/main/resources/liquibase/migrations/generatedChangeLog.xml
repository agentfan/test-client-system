	<changeSet author="CodeGeneration" id="create_generated_table_payment_instrument" labels="version:1.0.0">
		<preConditions onFail="MARK_RAN">
			<not>
				<tableExists tableName="payment_instrument" />
			</not>
		</preConditions>
